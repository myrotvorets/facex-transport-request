{
    "compilerOptions": {
        "target": "es2022",
        "sourceMap": true,
        "rootDirs": ["./lib", "./test"],
        "declaration": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": false,
        "skipLibCheck": true
    },
    "compileOnSave": true
}
